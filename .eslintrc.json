{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:vue/vue3-recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "vue/multi-word-component-names": "off",
    "vue/no-v-html": "warn"
  },
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    "docs/.vitepress/dist/",
    "docs/.vitepress/cache/"
  ]
}
